
<table class="table table-bordered table-hover mt-5">

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list), class: 'text-muted' %></td>
          <td>
            <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-dark' %></center>
          </td>
        </tr>
    <% else %>
        <tr>
          <td><%= link_to list.description, edit_list_path(list), class: 'font-weight-bold' %></td>
          <td>
            <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger text-white' %></center>
          </td>

        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


