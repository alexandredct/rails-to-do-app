
<table class="table table-bordered table-hover mt-5">

  <tbody>
    <% @lists.each do |list| %>
      <% if list.completed %>
        <tr class="table-success">
          <td class="striker"><%= link_to list.description, edit_list_path(list), class: 'text-muted' %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: 'hidden' %>
              <%= f.check_box :completed, :checked => false, :style => 'visibility: hidden' %>
              <%= f.submit 'Undo', class: 'btn btn-sm btn-secondary' %>
            <% end %>
          </td>
          <td>
            <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></center>
          </td>
        </tr>
      <% else %>
        <tr>
          <td><%= link_to list.description, edit_list_path(list), class: 'font-weight-bold' %></td>
          <td>
            <%= form_for(list) do |f| %>
              <%= f.text_field :description, type: 'hidden' %>
              <%= f.check_box :completed, :checked => true, :style => 'visibility: hidden' %>
              <%= f.submit 'Complete', class: 'btn btn-sm btn-success' %>
            <% end %>

          </td>
          <td>
            <center><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger text-white' %></center>
          </td>

        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


